{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@styles/*": ["./styles/*"],
      "@assets/*": ["./assets/*"]
    },
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "types": ["node", "jest", "react", "react-dom", "@testing-library/jest-dom"]
  },
  "include": [
    "src/**/*",
    "@types/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}