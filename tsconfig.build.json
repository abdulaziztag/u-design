{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/**/*",
    "@types/**/*.d.ts",
  ],
  "exclude": [
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.scss",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/**/__tests__/**",
    "node_modules",
    "dist"
  ]
}